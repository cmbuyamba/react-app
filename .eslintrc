{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },

    "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],

    "parser": "babel-eslint",
    "rules": {
        "react/prop-types": "off",
        "semi": [2, ""]
    }
}